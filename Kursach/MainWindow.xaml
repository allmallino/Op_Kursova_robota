<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursach"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Kursach.MainWindow"
        mc:Ignorable="d"
        Title="Music store" Height="500" Width="800" ResizeMode="NoResize" SizeToContent="Manual" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="buttonBase" TargetType="Border">
            <Style.Setters>
                <Setter Property="Background" Value="#FF00FF90"/>
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7BFFCA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="addButtonMenu" TargetType="Border" BasedOn="{StaticResource buttonBase}">
            <EventSetter Event="MouseLeftButtonDown" Handler="addWindowOpen"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="40"/>
        </Style>
        <Style x:Key="changeButtonMenu" TargetType="Border" BasedOn="{StaticResource buttonBase}">
            <EventSetter Event="MouseLeftButtonDown" Handler="musicChange"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style x:Key="deleteButtonMenu" TargetType="Border" BasedOn="{StaticResource buttonBase}">
            <EventSetter Event="MouseLeftButtonDown" Handler="deleteMusic"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style x:Key="rightItemButton" TargetType="Border" BasedOn="{StaticResource buttonBase}">
            <EventSetter Event="MouseLeftButtonDown" Handler="rightItem"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style x:Key="leftItemButton" TargetType="Border" BasedOn="{StaticResource buttonBase}">
            <EventSetter Event="MouseLeftButtonDown" Handler="leftItem"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
        </Style>
        <Style x:Key="BackChangeButton" TargetType="Border" BasedOn="{StaticResource buttonBase}">
            <EventSetter Event="MouseLeftButtonDown" Handler="changeWindowClose"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="75"/>
        </Style>
        <Style x:Key="dataGridBaseStyle" TargetType="DataGrid">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="ColumnWidth" Value="190"/>
            <Setter Property="HeadersVisibility" Value="None"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="Black"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="#FF00FF90"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="menuGrid" Background="#FF080012">
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Label Foreground="White" Content="Menu" FontSize="48" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
            <Grid Grid.Row="1" MouseLeftButtonDown="musicShowing" Background="#00000000">
                <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5,0,0,0" Source="/icons8-музыка-30 (1).png"/>
                <Label HorizontalAlignment="Left" Content="Tracks" Foreground="White" FontSize="22" Height="40" VerticalAlignment="Center" Margin="40,0,0,0" FontFamily="Segoe UI" />
            </Grid>
            <Grid Grid.Row="2" Cursor="Hand" MouseLeftButtonDown="coverShowing" Background="#00000000">
                <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5,0,0,0" Source="/icons8-плейлист-lounge-30.png"/>
                <Label HorizontalAlignment="Left" Content="Playlists" Foreground="#FFA7A6A6" FontSize="22" Height="40" VerticalAlignment="Center" Margin="40,0,0,0" />
            </Grid>
            <Grid Grid.Row="3" Cursor="Hand" MouseLeftButtonDown="groupShowing" Background="#00000000">
                <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5,0,0,0" Source="/icons8-хор-30.png"/>
                <Label HorizontalAlignment="Left" Content="Groups" Foreground="#FFA7A6A6" FontSize="22" Height="40" VerticalAlignment="Center" Margin="40,0,0,0" />
            </Grid>
            <Grid Grid.Row="4" Cursor="Hand" MouseLeftButtonDown="musicianShowing" Background="#00000000">
                <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5,0,0,0" Source="/icons8-микрофон-30.png"/>
                <Label HorizontalAlignment="Left" Content="Musicians" Foreground="#FFA7A6A6" FontSize="22" Height="40" VerticalAlignment="Center" Margin="40,0,0,0" />
            </Grid>
            <Grid Grid.Row="5" MouseLeftButtonDown="diskShowing" Cursor="Hand" Background="#00000000">
                <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5,0,0,0" Source="/icons8-пластинка-30.png"/>
                <Label HorizontalAlignment="Left" Content="Disks" Foreground="#FFA7A6A6" FontSize="22" Height="40" VerticalAlignment="Center" Margin="40,0,0,0" />
            </Grid>
            <Grid Grid.Row="6" Visibility="Hidden">
                <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="5,0,0,0" Source="/icons8-настройки-30.png"/>
                <Label HorizontalAlignment="Left" Content="Settings" Foreground="#FFA7A6A6" FontSize="22" Height="40" VerticalAlignment="Center" Margin="40,0,0,0" />
            </Grid>
            <Label Grid.Row="7" Foreground="#FF343434" Content="Made by Alex Zavarzin" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        </Grid>
        <Grid x:Name="menuShowTabs" Grid.Column="1">
            <Grid x:Name="musicShow" Background="#FF96FBB0" Margin="0,0,0,0" Visibility="Visible">
                <Border ToolTip="Search" VerticalAlignment="Top" HorizontalAlignment="Right" Width="400" Height="40" Margin="0,20,175,0" CornerRadius="10,10,10,10" Background="White" BorderBrush="#FF727272" BorderThickness="1,1,1,1" Cursor="Hand">
                    <Grid Margin="5,0,5,0">
                        <ComboBox x:Name="musicSearchList" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Height="36" Width="386" HorizontalAlignment="Center" SelectionChanged="musicSearchList_SelectionChanged"/>
                        <TextBox x:Name="musicSearchText" BorderBrush="{x:Null}" Background="White" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Width="388" Height="38" KeyUp="musicSearchText_KeyUp" MaxLength="22" MaxLines="1" IsUndoEnabled="False" />
                    </Grid>
                </Border>
                <Border x:Name="musicAddBtn" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="350,20,0,0" Height="40" Width="75" Style="{StaticResource addButtonMenu}">
                    <Label Content="Add" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Label x:Name="musicName" Content="Name" FontSize="36" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,78,0,0"/>
                <Label Content="Groups" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50,152,0,0"/>
                <Label Content="Genres" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="351,152,0,0"/>
                <Border HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="50,190,0,0" Height="175" Background="#FF00FF90" CornerRadius="10,10,10,10">
                    <DataGrid x:Name="groupListDataGrid" ToolTip="Click to see more information about selected group" HorizontalScrollBarVisibility="Hidden" DisplayMemberPath="Name" Style="{StaticResource dataGridBaseStyle}" SelectedCellsChanged="groupListDataGrid_SelectedCellsChanged"/>
                </Border>
                <Border VerticalAlignment="Top" Margin="350,190,50,0" Height="175" Background="#FF00FF90" CornerRadius="10,10,10,10">
                    <DataGrid x:Name="genreListDataGrid" HorizontalScrollBarVisibility="Hidden" DisplayMemberPath="Name" Style="{StaticResource dataGridBaseStyle}"/>
                </Border>
                <Border x:Name="musicChangeBtn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="300,0,0,60"  Style="{StaticResource changeButtonMenu}">
                    <Label Content="Change" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Border x:Name="musicDeleteBtn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,300,60" Style="{StaticResource deleteButtonMenu}">
                    <Label Content="Delete" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="300,0,0,10" Style="{StaticResource rightItemButton}">
                    <Label Content="-&gt;" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,300,10" Style="{StaticResource leftItemButton}">
                    <Label Content="&lt;-" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Grid x:Name="musicChangeWindow" Background="#4CAFFF92" Visibility="Hidden">
                    <Border CornerRadius="10,10,10,10" Background="#FF66FF96" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Height="200">
                        <Grid>
                            <Label  Content="Name:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Foreground="Black" FontSize="24" Height="42"/>
                            <TextBox x:Name="musicChangeLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="90,10,0,0" Foreground="Black" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" Height="42" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="297" TextChanged="nameChanged"/>
                            <Label Content="Group" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,55,0,0" Foreground="Black" FontSize="16"/>
                            <ComboBox x:Name="groupToAdd" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,-4" FontSize="16" VerticalContentAlignment="Center" DisplayMemberPath="Name"/>
                            <Border x:Name="groupAddBtn" Height="40" Width="75" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="170,0,0,0" Style="{StaticResource buttonBase}"  MouseLeftButtonDown="addItem1">
                                <Label Content="Add" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                            <ComboBox x:Name="groupToDelete" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,100,0,0" FontSize="16" VerticalContentAlignment="Center" DisplayMemberPath="Name"/>
                            <Border Height="40" Width="75" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="170,100,0,0" Style="{StaticResource buttonBase}" MouseLeftButtonDown="DeleteItem1">
                                <Label Content="Delete" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                            <Label Content="Genre" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="50,55,0,0" Foreground="Black" FontSize="16"/>
                            <ComboBox x:Name="genreToAdd" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="150,0,0,0" FontSize="16" VerticalContentAlignment="Center" DisplayMemberPath="Name"/>
                            <Border x:Name="genreAddBtn" Height="40" Width="75" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="390,0,0,0" Style="{StaticResource buttonBase}" MouseLeftButtonDown="addItem2">
                                <Label Content="Add" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                            <ComboBox x:Name="genreToDelete" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="150,100,0,0" FontSize="16" VerticalContentAlignment="Center" DisplayMemberPath="Name"/>
                            <Border x:Name="genreDeleteBtn" Height="40" Width="75" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="390,100,0,0" Style="{StaticResource buttonBase}" MouseLeftButtonDown="DeleteItem2">
                                <Label Content="Delete" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Top" Margin="390,10,0,0" Style="{StaticResource BackChangeButton}">
                                <Label Content="Back" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
                <Grid x:Name="musicAddWindow" Background="#4CAFFF92" Visibility="Hidden">
                    <Border Width="300" Height="299" Background="#FF66FF96" CornerRadius="10,10,10,10">
                        <Grid>
                            <Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="New track" FontSize="36" Margin="0,10,0,0" />
                            <Label Width="200" Height="40" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,62,0,0" Content="Name"/>
                            <Label Width="200" Height="40" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,115,0,0" Content="Record Condition"/>
                            <TextBox x:Name="musicAddText" Width="200" Height="40" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,90"/>
                            <ComboBox x:Name="musicAddList" Width="200" Height="40" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0" SelectedIndex="0">
                                <System:String>Studio</System:String>
                                <System:String>Concert</System:String>
                            </ComboBox>
                            <Border x:Name="musicAddAddBtn" Width="200" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,125,0,0" Style="{StaticResource buttonBase}" MouseLeftButtonDown="newMusicAdded">
                                <Label FontSize="24" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="musicAddBackBtn" Width="200" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,225,0,0" Style="{StaticResource buttonBase}" MouseLeftButtonDown="addWindowClose">
                                <Label FontSize="24" Content="Back" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
                <Label x:Name="musicRec" Content="Name" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="22,121,0,0"/>
            </Grid>
            <Grid x:Name="coverShow" Background="#FF96FBB0" Margin="0,0,0,0" Visibility="Hidden">
                <Border ToolTip="Search" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" Height="40" Margin="0,20,150,0" CornerRadius="10,10,10,10" Background="White" BorderBrush="#FF727272" BorderThickness="1,1,1,1">
                    <Grid Margin="5,0,5,0">
                        <ComboBox x:Name="coverSearchList" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Height="36" Width="386" HorizontalAlignment="Center" SelectionChanged="musicSearchList_SelectionChanged"/>
                        <TextBox x:Name="coverSearchText" BorderBrush="{x:Null}" Background="White" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Width="388" Height="38" KeyUp="musicSearchText_KeyUp" MaxLength="22" MaxLines="1" IsUndoEnabled="False" />
                    </Grid>
                </Border>
                <Border x:Name="coverAddBtn" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="350,20,0,0" Style="{StaticResource addButtonMenu}">
                    <Label Content="Add" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Label x:Name="coverName" Content="Name" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,250"/>
                <Label x:Name="coverPrice" Content="Costs:" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,150,0,0"/>
                <Label x:Name="coverSellsThisYear" Content="This year:" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,75"/>
                <Label x:Name="coverSellsLastYear" Content="Last year:" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>
                <Label x:Name="coverSellsAllTime" Content="All time:" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,75,0,0"/>
                <Border VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,200,0,0" Style="{StaticResource buttonBase}" MouseLeftButtonDown="leadersShowing" Height="40" Width="150">
                    <Label Content="Leaders" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Border x:Name="coverChangeBtn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,75" Style="{StaticResource changeButtonMenu}">
                    <Label Content="Change" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Border x:Name="coverDeleteBtn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,400,75" Style="{StaticResource deleteButtonMenu}">
                    <Label Content="Delete" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20" Style="{StaticResource rightItemButton}">
                    <Label Content="-&gt;" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Border VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,400,20" Style="{StaticResource leftItemButton}">
                    <Label Content="&lt;-" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Label Content="Tracks in this playlist" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="390,150,0,0" FontSize="18"/>
                <Border HorizontalAlignment="Right" VerticalAlignment="Center" Width="200" Margin="0,160,10,0" Height="300" Background="#FF00FF90" CornerRadius="10,10,10,10">
                    <DataGrid x:Name="musicGridInCover" ToolTip="Click to see more information about selected track" ScrollViewer.VerticalScrollBarVisibility="Auto" ColumnWidth="250" HorizontalScrollBarVisibility="Auto" SelectedCellsChanged="groupListDataGrid_SelectedCellsChanged" DisplayMemberPath="Name" Style="{StaticResource dataGridBaseStyle}"/>
                </Border>
                <Grid x:Name="coverChangeWindow" Background="#4CAFFF92" Visibility="Hidden">
                    <Border CornerRadius="10,10,10,10" Background="#FF66FF96" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Height="300">
                        <Grid>
                            <Label  Content="Name:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Foreground="Black" FontSize="24" Height="42"/>
                            <TextBox x:Name="coverChangeLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="90,10,0,0" Foreground="Black" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" Height="42" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="297" TextChanged="nameChanged" MaxLines="1" IsUndoEnabled="False"/>
                            <Label Content="Track" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,75,0,0" Foreground="Black" FontSize="16"/>
                            <ComboBox x:Name="musicToAdd" Width="150" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,50" VerticalContentAlignment="Center" DisplayMemberPath="Name"/>
                            <Border x:Name="musicToCoverAddBtn" Height="40" Width="75" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="170,0,0,50" MouseLeftButtonDown="addItem1" Style="{StaticResource buttonBase}">
                                <Label Content="Add" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                            <ComboBox x:Name="musicToDelete" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="150,0,0,50" VerticalContentAlignment="Center" DisplayMemberPath="Name"/>
                            <Border Height="40" Width="75" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="390,0,0,50" Style="{StaticResource buttonBase}" MouseLeftButtonDown="DeleteItem1">
                                <Label Content="Delete" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseLeftButtonDown="DeleteItem1"/>
                            </Border>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Top" Margin="390,10,0,0" Style="{StaticResource BackChangeButton}">
                                <Label Content="Back" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </Border>
                            <Label FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Price:" Margin="10,60,0,0"/>
                            <TextBox x:Name="coverChangePrice" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="80,60,0,0" Foreground="Black" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" Height="42" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="75" MaxLength="5" MaxLines="1" IsUndoEnabled="False" TextChanged="textOne"/>
                            <Label FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Sold this year:" Margin="10,175,0,0"/>
                            <TextBox x:Name="coverChangeN0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="170,175,0,0" Foreground="Black" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" Height="42" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="75" MaxLines="1" MaxLength="5" IsUndoEnabled="False" TextChanged="textTwo"/>
                            <Label FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Sold last year:" Margin="255,159,0,0"/>
                            <TextBox x:Name="coverChangeN1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="415,159,0,0" Foreground="Black" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" Height="42" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="75" MaxLines="1" MaxLength="5" IsUndoEnabled="False" TextChanged="textThree"/>
                            <Label FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Sold all time:" Margin="255,217,0,0"/>
                            <TextBox x:Name="coverChangeN2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,217,0,0" Foreground="Black" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" Height="42" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="95" MaxLength="6" MaxLines="1" IsUndoEnabled="False" TextChanged="textFour"/>
                        </Grid>
                    </Border>
                </Grid>
                <Grid x:Name="coverAddWindow" Background="#4CAFFF92" Visibility="Hidden">
                    <Border Width="300" Height="300" Background="#FF66FF96" CornerRadius="10,10,10,10">
                        <Grid>
                            <Label HorizontalAlignment="Center" VerticalAlignment="Top" Content="New playlist" FontSize="36" Margin="0,20,0,0" />
                            <Label Content="Name" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,150,105"/>
                            <TextBox x:Name="coverAddText" Width="200" Height="40" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,40"/>
                            <Border x:Name="coverAddAddBtn" Width="200" Height="45" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,100,0,0" MouseLeftButtonDown="newMusicAdded" Style="{StaticResource buttonBase}">
                                <Label FontSize="24" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="coverAddBackBtn" Width="200" Height="45" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,225,0,0" MouseLeftButtonDown="addWindowClose" Style="{StaticResource buttonBase}">
                                <Label FontSize="24" Content="Back" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <Grid x:Name="groupShow" Background="#FF96FBB0" Margin="0,0,0,0" Visibility="Hidden">
                <Border ToolTip="Search" VerticalAlignment="Top" HorizontalAlignment="Center" Width="400" Height="40" Margin="0,20,150,0" CornerRadius="10,10,10,10" Background="White" BorderBrush="#FF727272" BorderThickness="1,1,1,1">
                    <Grid Margin="5,0,5,0">
                        <ComboBox x:Name="groupSearchList" FontSize="24" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Height="36" Width="386" HorizontalAlignment="Center" SelectionChanged="musicSearchList_SelectionChanged"/>
                        <TextBox x:Name="groupSearchText" BorderBrush="{x:Null}" Background="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Width="388" Height="38" KeyUp="musicSearchText_KeyUp" MaxLines="1" MaxLength="22" IsUndoEnabled="False" />
                    </Grid>
                </Border>
                <Border x:Name="groupNewAddBtn" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="350,20,0,0" Style="{StaticResource addButtonMenu}">
                    <Label Content="Add" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
                </Border>
                <Label x:Name="groupName" Content="Name" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,250"/>
                <Label x:Name="groupType" Content="Type:" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,140"/>
                <Border x:Name="grupChangeBtn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,75" Style="{StaticResource changeButtonMenu}">
